{
  "deploy": {
    "startCommand": "uvicorn local_newsifier.api.main:app --host 0.0.0.0 --port $PORT --log-level debug --timeout-keep-alive 75",
    "healthcheckPath": "/health",
    "healthcheckTimeout": 60,
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 3,
    "env": {
      "PYTHON_VERBOSE": "1"
    }
  }
}
