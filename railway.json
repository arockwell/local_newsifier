{
  "deploy": {
    "startCommand": "python -m uvicorn local_newsifier.api.main:app --host 0.0.0.0 --port $PORT",
    "healthcheckPath": "/simple-health",
    "healthcheckTimeout": 60,
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 3,
    "env": {
      "PYTHON_VERBOSE": "1"
    }
  }
}
