# Database Configuration
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=local_newsifier

# Optional: Cursor-specific database (for multi-developer environments)
CURSOR_DB_ID=dev1

# App Settings
LOG_LEVEL=INFO
ENVIRONMENT=development  # Options: development, testing, production

# Optional Database configuration
# DB_POOL_SIZE=5
# DB_MAX_OVERFLOW=10
# DB_ECHO=False

# Celery Configuration
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# API Keys
APIFY_TOKEN=your_apify_token_here

# Python Settings
# Uncomment to set a specific Python path for local development
# PYTHONPATH=/Users/username/dev/local_newsifier

# To help with version consistency, ensure you're using Python 3.12 (matches CI)
# Run: pyenv install 3.12.3 && pyenv local 3.12.3
