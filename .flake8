[flake8]
max-line-length = 100
exclude = 
    .git,
    __pycache__,
    build,
    dist,
    venv

# Files that contain refactored code with longer docstrings
per-file-ignores =
    src/local_newsifier/database/adapter.py:E501
    src/local_newsifier/flows/entity_tracking_flow_refactored.py:E501
    src/local_newsifier/tools/entity_resolver_refactored.py:E501
    src/local_newsifier/tools/entity_tracker_refactored.py:E501
    tests/database/test_adapter.py:E501